extends ../layout 

block content
  include ../error

  h1= title
  form(action='/books/' + book.id + '?_method=PUT', method='post')
    include form
    input(type='submit', value='Update')
  p  
    a.btn.btn-danger(href=`/books/${book.id}/delete`) Delete Book
  h2 Loan History
  table
    thead
      tr
        th Book
        th Patron 
        th Loaned on
        th Return by 
        th Returned on
        th Action
    tbody
      each loan in loans
        tr
          td
            a(href='/books/' + book.id)= book.title
          td
            a(href='patron_detail.html')= `${loan.Patron.first_name} ${loan.Patron.last_name}`
          td= dateFormat(loan.loaned_on, 'yyyy-mm-dd')
          td= dateFormat(loan.return_by, 'yyyy-mm-dd')
          if loan.returned_on
            td= dateFormat(loan.returned_on, 'yyyy-mm-dd')
          else
            td
          td
            if !loan.returned_on
              a.button(href=`/loans/${loan.id}/return`) Return Book
        