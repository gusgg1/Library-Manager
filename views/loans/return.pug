extends ../layout 

block content
  h1 Patron: Return Book
  p
    strong Book Title: 
    = book.title
  p
    strong Loaned By: 
    = `${patron.first_name} ${patron.last_name}`
  p
    strong Loaned On: 
    = dateFormat(loan.loaned_on, 'yyyy-mm-dd')
  p
    strong Return By: 
    = dateFormat(loan.return_by, 'yyyy-mm-dd')

  include ../error
  form(action=`/loans/${loan.id}?_method=PUT`, method='post')
    p
      label(for='returned_on') Returned on:
      input#returned_on(type='text', name='returned_on' value=dateFormat(new Date(), 'yyyy-mm-dd'))
    p
      input(type='submit', value='Return Book')